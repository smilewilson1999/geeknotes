{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "./shiki.bundle.ts",
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/shared/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "noUnusedLocals": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@/*": [
        "src/renderer/src/*"
      ]
    }
  }
}